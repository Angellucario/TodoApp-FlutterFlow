{
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "Task",
    "description": "Schema for task documents in the Firestore `Task` collection for the Todo app.",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "completed": {
        "description": "Whether the task is completed.",
        "type": "boolean"
      },
      "created": {
        "description": "The time when the task was created.",
        "type": "string",
        "format": "date-time"
      },
      "details": {
        "description": "Additional details for the task.",
        "type": "string"
      },
      "title": {
        "description": "The title of the task.",
        "type": "string",
        "minLength": 1
      },
      "user": {
        "description": "Path reference to the user document who owns the task.",
        "type": "string",
        "pattern": "^/users/[A-Za-z0-9_-]+$"
      }
    },
    "required": ["completed", "created", "title", "user"]
  }
  